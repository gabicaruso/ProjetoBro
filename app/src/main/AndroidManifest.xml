<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.insper.al.mayraprl.bro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_bro"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_bro_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PointCounter"></activity>

        <service
            android:name=".OverlayService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".OverlayActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".firstPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Permission"
        android:noHistory="true"/>

        <activity android:name=".SignIn"
            android:noHistory="true"/>

    </application>

</manifest>